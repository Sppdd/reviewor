{
  "manifest_version": 3,
  "name": "Feelly",
  "version": "2.0",
  "description": "Real-time grammar and writing assistant with AI-powered suggestions",
  "icons": {
    "128": "assets/icon128.png",
    "48": "assets/icon48.png",
    "16": "assets/icon16.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tailwind.css",
        "inline-checker/core/FieldDetector.js",
        "inline-checker/core/FieldMonitor.js",
        "inline-checker/visual/UnderlineRenderer.js",
        "inline-checker/visual/TooltipManager.js",
        "inline-checker/visual/StatusWidget.js",
        "inline-checker/visual/OverlayPositioner.js",
        "inline-checker/visual/StatusUpdater.js",
        "inline-checker/analysis/TextAnalyzer.js",
        "inline-checker/analysis/IssueDetector.js",
        "inline-checker/analysis/AnalysisCache.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
